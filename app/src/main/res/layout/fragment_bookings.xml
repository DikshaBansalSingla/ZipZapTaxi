<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/appToolbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMain"
        android:layout_width="0dp"
        android:layout_height="@dimen/_36sdp"
        app:layout_constraintTop_toBottomOf="@+id/appToolbar"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/bg_grey_corners">

        <Button
            android:id="@+id/btnActiveBookings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCompleted"
            android:background="@drawable/bg_white_button_corners"
            app:backgroundTint="@null"
            android:text="Active"
            android:layout_margin="@dimen/_2sdp"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/btnCompleted"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/btnActiveBookings"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_grey_unselecte"
            app:backgroundTint="@null"
            android:text="Completed"
            android:fontFamily="@font/poppins_semibold"
            android:layout_margin="@dimen/_2sdp"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:textColor="@color/black"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvActiveBookings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/clMain"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_below="@+id/clMain"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCompleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/clMain"
        />

    <TextView
        android:id="@+id/tvNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/no_result_found"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/clMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"

        />



</androidx.constraintlayout.widget.ConstraintLayout>