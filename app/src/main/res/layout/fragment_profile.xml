<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.home.ProfileFragment">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/appToolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_white_circle"
                android:elevation="5dp"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_user" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/camera"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:text=""
                android:editable="false"
                android:focusable="false"
                android:background="@drawable/rounded_edittext_bg"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/mobile_number"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:inputType="phone"
                android:text=""
                android:textColor="@color/black"
                android:editable="false"
                android:focusable="false"
                android:background="@drawable/rounded_edittext_bg"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tvmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:inputType="textEmailAddress"
                android:text=""
                android:textColor="@color/black"
                android:editable="false"
                android:focusable="false"
                android:background="@drawable/rounded_edittext_bg"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"/>


                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/address"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etAddress"
                    android:inputType="text"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:background="@drawable/rounded_edittext_bg"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14dp"/>


            <TextView
                android:id="@+id/tvCompAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Complete Address(Optional)"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etCompAddress"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text=""
                android:textColor="@color/black"
                android:background="@drawable/rounded_edittext_bg"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tvRefCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Referral Code"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etRefCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:inputType="text"
                android:text=""
                android:textColor="@color/black"
                android:editable="false"
                android:focusable="false"
                android:background="@drawable/rounded_edittext_bg"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/button_bg_rounded_primary"
                android:layout_marginBottom="50dp" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>