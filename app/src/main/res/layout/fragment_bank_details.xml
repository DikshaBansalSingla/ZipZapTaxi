<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.home.ProfileFragment">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/appToolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/account_holder_name"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:text=""
                android:hint="Janet dane"
                android:maxLength="30"
                android:background="@drawable/rounded_edittext_bg"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/tvAccNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/bank_account_number"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etAccNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:inputType="number"
                android:text=""
                android:hint="000000000000"
                android:maxLength="14"
                android:textColor="@color/black"
                android:background="@drawable/rounded_edittext_bg"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/bank_name"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:inputType="text"
                android:text=""
                android:hint="Hdfc Bank"
                android:textColor="@color/black"
                android:background="@drawable/rounded_edittext_bg"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"/>


                <TextView
                    android:id="@+id/tvIfsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/ifsc_code"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etIfsc"
                    android:inputType="textCapCharacters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text=""
                    android:hint="UTIB0000000"
                    android:maxLength="11"
                    android:textColor="@color/black"
                    android:background="@drawable/rounded_edittext_bg"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14dp"/>


            <TextView
                android:id="@+id/tvOr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:text="OR"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvUpi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="UPI Id/ Google Pay/ Paytm"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etUpi"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text=""
                android:hint="123456789@payutm"
                android:maxLength="11"
                android:textColor="@color/black"
                android:background="@drawable/rounded_edittext_bg"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/button_bg_rounded_primary"
                android:layout_marginBottom="50dp" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>