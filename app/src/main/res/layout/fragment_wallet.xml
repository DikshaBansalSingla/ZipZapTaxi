<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".wallet.WalletFragment">

   <include layout="@layout/layout_toolbar"
       android:id="@+id/appToolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/appToolbar"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp"
                app:cardUseCompatPadding="true">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tvVendorAmt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvCollectAmt"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textAlignment="center"
                        android:padding="@dimen/_6sdp"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text=""
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:textSize="@dimen/_14sdp"
                        android:background="@drawable/rounded_edittext_bg_amount"
                        />

                    <TextView
                        android:id="@+id/tvCollectAmt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        app:layout_constraintStart_toEndOf="@id/tvVendorAmt"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textAlignment="center"
                        android:padding="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:text=""
                        android:textSize="@dimen/_14sdp"
                        android:background="@drawable/rounded_edittext_bg_collect"
                        />

                    <TextView
                        android:id="@+id/tvPaidAmt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvPenalty"
                        app:layout_constraintTop_toBottomOf="@id/tvVendorAmt"
                        android:textAlignment="center"
                        android:padding="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:text=""
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/rounded_edittext_bg_paid"
                        />

                    <TextView
                        android:id="@+id/tvPenalty"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        app:layout_constraintStart_toEndOf="@id/tvPaidAmt"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCollectAmt"
                        android:textAlignment="center"
                        android:padding="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:text=""
                        android:textSize="@dimen/_14sdp"
                        android:background="@drawable/rounded_edittext_bg_red"
                        />

                    <TextView
                        android:id="@+id/tvTotalBal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvAddMoney"
                        app:layout_constraintTop_toBottomOf="@id/tvPaidAmt"
                        android:textAlignment="center"

                        android:padding="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textSize="@dimen/_14sdp"
                        android:background="@drawable/rounded_edittext_bg_green"
                        />

                    <TextView
                        android:id="@+id/tvAddMoney"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        app:layout_constraintStart_toEndOf="@id/tvTotalBal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPaidAmt"
                        android:textAlignment="center"
                        android:padding="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:text="Add Money"
                        android:textSize="@dimen/_14sdp"
                        android:drawableBottom="@drawable/baseline_add_circle_24"
                        android:background="@drawable/button_bg_rounded_primary"
                        />

                    <TextView
                        android:id="@+id/tvNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvAddMoney"
                        android:text="dwfdvdsvd"
                        android:visibility="visible"
                        android:textColor="@color/red_color"
                        android:textStyle="italic"
                        android:fontFamily="@font/poppins_medium"
                        tools:visibility="visible"/>



                    <TextView
                        android:id="@+id/tvReqMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNote"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintWidth_percent="0.4"
                        android:textAlignment="center"
                        android:padding="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:text="Request Money"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/rounded_edittext_bg_bluee"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBookings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/cvMain"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_6sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:nestedScrollingEnabled="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>