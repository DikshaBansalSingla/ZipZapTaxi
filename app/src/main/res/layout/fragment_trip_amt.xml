<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.home.ProfileFragment">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/appToolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">


            <TextView
                android:id="@+id/txtTds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="TDS Deducted"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_16sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvTds"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tvTds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="₹ 0"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_16sdp"
                android:textSize="@dimen/_14ssp"
                android:gravity="end"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtTds"
                app:layout_constraintTop_toTopOf="parent"
                />


            <TextView
                android:id="@+id/txtTdsApply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="TDS Applicable"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvTds"
                app:layout_constraintTop_toBottomOf="@+id/txtTds"
                />

            <TextView
                android:id="@+id/tvTdsApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="₹ 0"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:gravity="end"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtTdsApply"
                app:layout_constraintTop_toBottomOf="@+id/txtTds"
                />


            <TextView
                android:id="@+id/txtAvailBal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Available Balance"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvAvailBal"
                app:layout_constraintTop_toBottomOf="@+id/txtTdsApply"
                />

            <TextView
                android:id="@+id/tvAvailBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="₹ 1000"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:gravity="end"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtAvailBal"
                app:layout_constraintTop_toBottomOf="@+id/txtTdsApply"
                />

            <TextView
                android:id="@+id/txtSecurity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Security"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvSecurity"
                app:layout_constraintTop_toBottomOf="@+id/txtAvailBal"
                />

            <TextView
                android:id="@+id/tvSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="₹ 150"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:gravity="end"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtSecurity"
                app:layout_constraintTop_toBottomOf="@+id/txtAvailBal"
                />


            <TextView
                android:id="@+id/txtWithDrawBal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Withdrawal Balance"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvWithDrawBal"
                app:layout_constraintTop_toBottomOf="@+id/txtSecurity"
                />

            <TextView
                android:id="@+id/tvWithDrawBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="₹ 100"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:gravity="end"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtWithDrawBal"
                app:layout_constraintTop_toBottomOf="@+id/txtSecurity"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSentReq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Send Request"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/button_bg_rounded_primary"
                android:layout_marginBottom="50dp"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWithDrawBal"/>

            <TextView
                android:id="@+id/tvTransactions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Transactions"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvWithDrawBal"
                app:layout_constraintTop_toBottomOf="@+id/btnSentReq"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTransactions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTransactions"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/tvNoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTransactions"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/black"
                android:visibility="gone"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_12sdp"
                android:text="No Transactions Found!!"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>