<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <include layout="@layout/layout_toolbar"
       android:id="@+id/appToolbar"/>

    <TextView
        android:id="@+id/tvActiveRides"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/appToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvWalletBal"
        android:text="Home"
        android:background="@drawable/bg_white_oval"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="@dimen/_8sdp"
        android:padding="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_12sdp"
        />

    <TextView
        android:id="@+id/tvWalletBal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/appToolbar"
        app:layout_constraintStart_toEndOf="@+id/tvActiveRides"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Wallet: â‚¹0"
        android:background="@drawable/bg_white_oval"
        android:elevation="@dimen/_8sdp"
        android:padding="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_12sdp"
        />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvWalletBal"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBookingList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWalletBal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_4sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/tvNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/no_bookings_found"
        android:visibility="gone"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"/>


</androidx.constraintlayout.widget.ConstraintLayout>